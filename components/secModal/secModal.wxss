.modal-btn-wrapper{
  display: flex;
  flex-direction: row-reverse;
  /* padding: 30rpx; */
  border-top: 1rpx solid #ccc;
  border-bottom-left-radius:10rpx;
  border-bottom-right-radius:10rpx;
  background: #fff;
  text-align: center;
}
.cancel-btn,.confirm-btn{
  flex-grow: 1;
  padding: 30rpx;
}