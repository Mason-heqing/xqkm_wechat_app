.mask{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.4);
  z-index: 9999;
}

.modal-content{
  position: absolute;
  width: 90%;
  /* height: 80%; */
  background-color: #fff;
  border-top-left-radius:10rpx;
  border-top-right-radius:10rpx;
}

.main-content{
  flex: 1;
  height: 100%;
  overflow-y: hidden; 
}
.modal-btn-close{
  position: absolute;
  z-index: 99;
  right: -10rpx;
  top: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ccc;
  vertical-align: center;
  text-align: center;
  border:50%;
  color: #fff
}
/* .modal-btn-close text{
    
