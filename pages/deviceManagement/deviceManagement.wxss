/* pages/deviceManagement/deviceManagement.wxss */
.container {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgb(242,242,242);
}

.topbox {
  position: absolute;
  top: 0;
  display: flex;
  flex-direction: row;
  width: 100%;
  background-color: #ffffff;
   
}
.tool-item{
  display: flex;
  justify-content: center;
   width:33.3333%;
   /* padding: 0 15rpx; */
   /* height: 120rpx;
   line-height: 120rpx;
   border-bottom:1rpx solid #f0f0f0; */
}

.tool-item>image{
  width: 100%;
  height: 140rpx;
}
.tool-item text{
  padding-left: 20rpx;
}
.device-num{
  position: absolute;
  top:146rpx ;
  width: 100%;
  padding: 20rpx 30rpx;
}
.mainbox {
  position: absolute;
  top:228rpx;
  width: 100%;
  overflow: scroll;
}

.listbox {
  /* overflow: hidden; */
  padding:30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom:1rpx solid #f0f0f0;
  background-color: #ffffff;
}
.item-left{
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-grow: 1;
}
.item-right{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.status{
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50%;
  text-align: center;
  color:#fff;
  font-size:28rpx;
}
.online{
  background:rgb(75, 216, 99);
}
.offline{
  background:gray;
}
.infobox{
  padding-left: 30rpx;
}
.adress{
  padding-bottom: 10rpx;
}
.sn-num{
  padding-top:10rpx;
}
.icon{
  padding-left:30rpx;
}
.icon>image{
  width: 50rpx;
  height: 50rpx;
}
.icon:nth-child(2)>image{
  width: 40rpx;
  height: 40rpx;
}
.modal-title{
  border-bottom: 1rpx solid #ccc;
  padding: 30rpx;
}
.model-body{
  height:170rpx;
  line-height: 170rpx;
  text-align: center;
}