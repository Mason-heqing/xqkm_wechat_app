.openingRecord {
  position: absolute;
  top:80rpx;
  width: 100%;
  background-color: #ffffff;
}

.listbox {
  display: flex;
  flex-direction: row;
  padding: 30rpx 0;
  /* overflow: hidden; */
  /* height: 160rpx; */
  border-bottom: 2rpx solid #f0f0f0
}

.captureimg {
  flex: 3;
  text-align: center;
}

.captureimg image {
  width: 160rpx;
  height: 160rpx;
}

.opinformation {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.opinformation view {
  flex: 3;
}

.opmode {
  display: flex;
  align-items: flex-end;
  flex: 2;
  text-align: center;
  padding: 10rpx;
  font-size: 34rpx;
  /* line-height: 270rpx; */
}
.item-name{
  font-size: 32rpx;
  /* font-weight: bolder; */
  color: #181818;
}

.item-address,.item-times{
  display: flex;
  align-items: center;
  color: #787878;
}
.item-address>image{
  width: 22rpx;
  height: 30rpx;
}
.item-times>image{
  width: 30rpx;
  height: 30rpx;
}
.item-address text,.item-times text{
  padding-left:12rpx;
}
.refresh{
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  padding: 0 30rpx;
}
.refresh>image{
  width: 40rpx;
  height: 40rpx;
}
.modal-title{
  border-bottom: 1rpx solid #ccc;
  padding: 30rpx;
}
.model-body{
  display: flex;
  align-items: center;
  height:230rpx;
  line-height: 170rpx;
  text-align: center;
}
.model-content{
  width: 100%;
  padding: 30rpx;
}
