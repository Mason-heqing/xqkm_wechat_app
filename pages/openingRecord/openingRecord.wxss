.times{
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 370rpx;
  background: #eee;
  margin-left: 30rpx;
}

.times-icon{
  padding-left:10rpx;
}
.times-icon>image{
  width: 20rpx;
  height: 20rpx;
}

.datepick>image{
  width: 30rpx;
  height: 30rpx;
}

.equipmentpick {
  width: 370rpx;
