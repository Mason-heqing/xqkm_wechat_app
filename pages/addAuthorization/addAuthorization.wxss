page {}
.container{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #f0f0f0;
}
.topbox {
  background-color: #ffffff;
  /* overflow: hidden; */
}

.mainbox {
  position: absolute;
  top:163rpx;
  width: 100%;
  background-color: #ffffff;
  /* overflow: hidden; */
}

.allcheckbox {
  /* overflow: hidden; */
  display: flex;
  flex-direction: row;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.allSelect{
  flex-grow: 1;
}
.listbox {
  /* overflow: hidden; */
  display: flex;
  flex-direction: row;
  align-items: center;
  padding:10rpx 30rpx;
  /* height: 60px;
  line-height: 60px; */
  border-bottom: 1rpx solid #f0f0f0;
}

.headbox {
  flex: 3;
  text-align: center;
}
.headbox>image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

/* .headbox image {
  width: 30rpx;
  height: 30rpx;
} */

.aname {
  flex: 6;
}

.cbbox {
  display: flex;
  justify-content: flex-end;
  flex: 1;
}
.authorization-search{
  position: absolute;
  top: 0;
  width: 100%;
}
/*搜索*/
.info-search {
  /* position: fixed; */
  width: 92%;
  padding: 40rpx 30rpx;
  background-color: #fff;
  z-index: 999;
  border-bottom: 1rpx solid #f0f0f0;
}

.search {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background-color: whitesmoke;
  border: 1rpx solid #ddd;
  border-radius: 20rpx;
}

.search input {
  width: 80%;
  font-size: 27rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left: 30rpx;
}

.search image {
  width: 40rpx;
  height: 40rpx;
  padding-right: 20rpx;
}
.submit{
  position: absolute;
  bottom:24rpx;
  width: 100%;
  padding: 30rpx 0;
  background: #f0f0f0;
}
.subbutton{
  background: rgb(217, 0, 27);
  color: #fff;
  width: 80%;
}