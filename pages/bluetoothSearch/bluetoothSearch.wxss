.connectPage .tips{
  margin-top:20rpx;
  padding:0 30rpx;
}
.connectPage .connecting{
  font-size:32rpx;
  color:#201000;
  font-weight:600;
  letter-spacing: 2rpx;
  text-align: center;
}
.connectPage .marginTop100{
  margin-top:100rpx;
}
.connectPage .marginTop50{
  margin-top:50rpx;
}
.connectPage .closeDv{
  color:#858585;
  font-size:26rpx;
  letter-spacing: 2rpx;
  display:block;
}
.connectPage .alignCenter{
  text-align:center;
}
.connectPage .connectStatus{
  text-align: center;
}
.connectPage .blue{
  color:blue;
}
.connectPage .blueImg{
  display: block;
  margin:150rpx auto 80rpx;
  width:198rpx;
  height:198rpx;
}
.connectPage .dot {
  height: 8rpx;
  width: 8rpx;
  display: inline-block;
  border-radius: 4rpx;
  animation: dotting 2.4s  infinite step-start;
}

@keyframes dotting {
  25%{
      box-shadow: 8rpx 0 0 #201000;
  }
  50%{
      box-shadow: 8rpx 0 0 #201000 ,28rpx 0 0 #201000;
  }
  75%{
      box-shadow: 8rpx 0 0 #201000 ,28rpx 0 0 #201000, 48rpx 0 0 #201000;
  }
}



